GREEN = \033[32m
BLUE = \033[34m
PURPLE = \033[35m
CYAN = \033[36m
RESET = \033[0m
BOLD = \033[1m

CXX = g++
CXXFLAGS = -Wall -Wextra -std=c++98

TARGET = zombie

SOURCES = Zombie.cpp zombieHorde.cpp

OBJECTS = $(SOURCES:.cpp=.o)

all: $(TARGET)
	@echo "$(GREEN)‚ú® Compiled with success!$(RESET)"

$(TARGET): main.cpp $(OBJECTS)
	@echo "$(PURPLE)üî® Building the exec...$(RESET)"
	@$(CXX) $(CXXFLAGS) $^ -o $(TARGET)

%.o: %.cpp
	@echo "$(CYAN)üìù Compiling $<...$(RESET)"
	@$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	@echo "$(BLUE)üßπ Cleaning object files...$(RESET)"
	@rm -f $(OBJECTS) $(TARGET)
	@echo "$(GREEN)‚ú® Object files clean!$(RESET)"

fclean: clean
	@echo "$(BLUE)üßπ Cleaning exec files...$(RESET)"
	@rm -f $(TARGET)
	@echo "$(GREEN)‚ú® Exec files clean!$(RESET)"

re: fclean all

.PHONY: all clean fclean re
